<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brown_for_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/mastermind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coustard"
            android:text="@string/app_name"
            android:textColor="@color/mastermind_text"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.119" />

        <Button
            android:id="@+id/task_1st_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="task-1st-button"
            android:foreground="@drawable/rounded_btn_style"
            android:insetTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mastermind_text"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/task_2nd_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="task-2nd-button"
            android:foreground="@drawable/rounded_btn_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/task_1st_btn"
            app:layout_constraintTop_toBottomOf="@+id/mastermind_text"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/task_3th_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="task-3rd-button"
            android:foreground="@drawable/rounded_btn_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/task_2nd_btn"
            app:layout_constraintTop_toBottomOf="@+id/mastermind_text"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/task_4th_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="task-4th-button"
            android:foreground="@drawable/rounded_btn_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/task_3th_btn"
            app:layout_constraintTop_toBottomOf="@+id/mastermind_text"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>