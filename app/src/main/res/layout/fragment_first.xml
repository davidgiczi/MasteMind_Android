<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brown_for_background"
        android:padding="16dp"
        android:textAlignment="center"
        android:visibility="visible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/mastermind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coustard"
            android:text="@string/app_name"
            android:textColor="@color/mastermind_text"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.119" />

        <Button
            android:id="@+id/task_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="task-1st-button"
            android:foreground="@drawable/rounded_btn_style"
            android:insetTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mastermind_text"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/task_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="task-2nd-button"
            android:foreground="@drawable/rounded_btn_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/task_1"
            app:layout_constraintTop_toBottomOf="@+id/mastermind_text"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/task_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="task-3rd-button"
            android:foreground="@drawable/rounded_btn_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/task_2"
            app:layout_constraintTop_toBottomOf="@+id/mastermind_text"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/task_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="task-4th-button"
            android:foreground="@drawable/rounded_btn_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/task_3"
            app:layout_constraintTop_toBottomOf="@+id/mastermind_text"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/row_1_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="row_1_1"
            android:foreground="@drawable/rounded_btn_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_1" />

        <Button
            android:id="@+id/row_1_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="row_1_2"
            android:foreground="@drawable/rounded_btn_style"
            app:layout_constraintStart_toEndOf="@+id/row_1_1"
            app:layout_constraintTop_toBottomOf="@+id/task_2" />

        <Button
            android:id="@+id/row_1_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="row_1_3"
            android:foreground="@drawable/rounded_btn_style"
            app:layout_constraintStart_toEndOf="@+id/row_1_2"
            app:layout_constraintTop_toBottomOf="@+id/task_3" />

        <Button
            android:id="@+id/row_1_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn_style"
            android:contentDescription="row_1_4"
            android:foreground="@drawable/rounded_btn_style"
            app:layout_constraintStart_toEndOf="@+id/row_1_3"
            app:layout_constraintTop_toBottomOf="@+id/task_4" />

        <TextView
            android:id="@+id/ok_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="190dp"
            android:layout_marginStart="20dp"
            android:text="@string/ok"
            android:textColor="@color/mastermind_text"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.636"
            app:layout_constraintStart_toEndOf="@+id/row_1_4"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>